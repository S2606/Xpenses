                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <TextView
                    android:text="Date"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
